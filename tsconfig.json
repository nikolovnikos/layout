{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    // "babel.config.js",
    "webpack.config.js",
    "jest.config.js",
    ".history"
  ]
}